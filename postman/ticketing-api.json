{
	"info": {
		"_postman_id": "ticketing-system-api",
		"name": "Ticketing System API",
		"description": "API collection for the Ticketing System\n\n## How to use:\n1. Run 'Login' request first\n2. Token auto-saves to collection\n3. All other requests will work automatically",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{access_token}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000/api"
		},
		{
			"key": "access_token",
			"value": ""
		},
		{
			"key": "refresh_token",
			"value": ""
		}
	],
	"item": [
		{
			"name": "1. Login First",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"if (jsonData.access) {",
							"    pm.collectionVariables.set('access_token', jsonData.access);",
							"    pm.collectionVariables.set('refresh_token', jsonData.refresh);",
							"    console.log('Token saved successfully!');",
							"}",
							"",
							"pm.test('Login successful', function() {",
							"    pm.response.to.have.status(200);",
							"    pm.expect(jsonData.access).to.exist;",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\": \"admin\",\n    \"password\": \"admin123\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/auth/login/",
					"host": ["{{base_url}}"],
					"path": ["auth", "login", ""]
				}
			}
		},
